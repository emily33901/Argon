# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug_x32
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug_x32)
  steamclient_config = debug_x32
  testbed_config = debug_x32
endif
ifeq ($(config),debug_x64)
  steamclient_config = debug_x64
  testbed_config = debug_x64
endif
ifeq ($(config),release_x32)
  steamclient_config = release_x32
  testbed_config = release_x32
endif
ifeq ($(config),release_x64)
  steamclient_config = release_x64
  testbed_config = release_x64
endif

PROJECTS := steamclient testbed

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

steamclient:
ifneq (,$(steamclient_config))
	@echo "==== Building steamclient ($(steamclient_config)) ===="
	@${MAKE} --no-print-directory -C . -f steamclient.make config=$(steamclient_config)
endif

testbed:
ifneq (,$(testbed_config))
	@echo "==== Building testbed ($(testbed_config)) ===="
	@${MAKE} --no-print-directory -C . -f testbed.make config=$(testbed_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f steamclient.make clean
	@${MAKE} --no-print-directory -C . -f testbed.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug_x32"
	@echo "  debug_x64"
	@echo "  release_x32"
	@echo "  release_x64"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   steamclient"
	@echo "   testbed"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"